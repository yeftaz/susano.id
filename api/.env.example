# Application
APP_ENV=development
APP_PORT=8080
APP_URL=http://localhost:8080

# Database
DB_HOST=localhost
DB_PORT=5432
DB_NAME=susano
DB_USER=root
DB_PASSWORD=
DB_SSL_MODE=disable
DB_MAX_OPEN_CONNS=25
DB_MAX_IDLE_CONNS=5
DB_CONN_MAX_LIFETIME=5m

# Session
SESSION_LIFETIME=720h
SESSION_SECURE=false
SESSION_DOMAIN=localhost

# CORS
CORS_ALLOWED_ORIGINS=http://localhost:3000,http://localhost:3001

# Rate Limiting
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_WINDOW=1m

# Logging
LOG_LEVEL=debug
LOG_MAX_SIZE=100
LOG_MAX_BACKUPS=30
LOG_MAX_AGE=30
LOG_COMPRESS=true
